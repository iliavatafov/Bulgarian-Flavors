{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
